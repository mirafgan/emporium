{
	"compilerOptions": {
		"target": "es6", // JavaScript çıktısı ES6 olacak
		"module": "commonjs", // Modül sistemi ES Module olacak
		"outDir": "./dist", // Derlenmiş dosyaların çıkış dizini
		"baseUrl": "./src", // Kaynak dosyaların bulunduğu dizin
		"strict": true, // Katı TypeScript kuralları
		"esModuleInterop": true, // ES module ile CommonJS uyumluluğu
		"moduleResolution": "node", // Modül çözümleme stratejisi
		"forceConsistentCasingInFileNames": true, // Dosya adlarında tutarlılık zorunlu
		"skipLibCheck": true // Kütüphane kontrolünü atla (hız için)
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
